    "version": "0.2.0",
    "configurations": [
        {
            "type": "java",
            "name": "CodeLens (Launch) - Compiler",
            "request": "launch",
            "mainClass": "mxcompiler.main.Compiler",
            "projectName": "mxc"
        },
        {
            "type": "java",
            "name": "Debug (Launch) - Current File",
            "request": "launch",
            "mainClass": "${file}"
        },
        {
            "type": "java",
            "name": "Debug (Launch)-App<mxc>",
            "request": "launch",
            "mainClass": "mxcompiler.App",
            "projectName": "mxc"
        },
        {
            "name": "Debug ANTLR4 grammar",
            "type": "antlr-debug",
            "request": "launch",
            "input": "src/test/cases/test.in",
            "grammar": "src/main/java/mxcompiler/parser/grammar/Mx.g4",
            "startRule": "start",
            "printParseTree": true,
            "visualParseTree": true
        }
    ]
}